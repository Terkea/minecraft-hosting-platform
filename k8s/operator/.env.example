# Kubernetes Operator Environment Variables
# Copy this file to .env and fill in the values
# ALL REQUIRED VARIABLES must be set - the operator will panic without them

# RCON Configuration (REQUIRED)
# Password used to connect to Minecraft servers via RCON
# Must match the password used by the API server
# Generate a secure password: openssl rand -base64 24
RCON_PASSWORD=

# NATS Configuration (optional - for event publishing)
NATS_URL=nats://nats:4222
ENABLE_EVENTS=true
