# Development Dockerfile for Go backend
FROM golang:1.24-alpine AS development

# Install required packages
RUN apk add --no-cache git curl

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Default command - use go run for development
CMD ["go", "run", "cmd/api-server/main.go"]