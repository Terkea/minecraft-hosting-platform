# API Server Environment Variables
# Copy this file to .env and fill in the values
# ALL VARIABLES ARE REQUIRED - the server will not start without them

# Database Configuration (CockroachDB/PostgreSQL)
# Option 1: Connection string (preferred)
DATABASE_URL=postgresql://minecraft:minecraft_dev@localhost:26257/minecraft_platform?sslmode=disable
# Option 2: Individual variables
# DATABASE_HOST=localhost
# DATABASE_PORT=26257
# DATABASE_NAME=minecraft_platform
# DATABASE_USER=minecraft
# DATABASE_PASSWORD=minecraft_dev
# DATABASE_SSLMODE=disable

# Server Configuration (REQUIRED)
PORT=8080
K8S_NAMESPACE=minecraft-servers

# CORS Configuration (REQUIRED)
# Comma-separated list of allowed origins
# Use * for all origins (not recommended for production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Google OAuth Configuration (REQUIRED)
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Enable: Google+ API and Google Drive API
# Scopes: openid, email, profile, https://www.googleapis.com/auth/drive.file
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/google/callback

# JWT Configuration (REQUIRED)
# Secret key for signing JWT tokens
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Frontend URL (for OAuth redirect)
# URL where users will be redirected after OAuth
FRONTEND_URL=http://localhost:5173

# Minikube Configuration (optional - for local development)
# IP address of the minikube cluster
MINIKUBE_IP=192.168.49.2

# Backup Server URL (optional)
# URL of the backup server for downloading backups from PVC (legacy)
BACKUP_SERVER_URL=http://192.168.49.2:30090
