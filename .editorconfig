# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_size = 2

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2
